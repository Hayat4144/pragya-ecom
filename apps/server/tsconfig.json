{
    "extends": "@workspace/typescript-config/base.json",
    "compilerOptions": {
        "lib": [
            "ES2015"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@workspace/*": [
                "../../packages/*/dist"
            ],
            "@jobs/*": [
                "src/jobs/*"
            ],
            "@queues/*": [
                "src/queues/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@controller/*": [
                "src/controller/*"
            ],
            "@customtype/*": [
                "src/types/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@validation/*": [
                "src/validation/*"
            ],
            "@products/*": [
                "src/products/*"
            ],
            "@categories/*": [
                "src/categories/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
